<h1>Edit User</h1>

<% form_for @user do |f| %>
	<%= f.label "Login" %>
	<%= f.text_field :login %> <br />

	<%= f.label "Email"%>
	<%= f.text_field :email %> <br />

	<%= f.label "Admin?"%>
	<% if admin? %>
		<%= f.check_box :admin %> <br />
	<% else %>
		<%= f.check_box :admin, :disabled => true, :readonly => true %> (Checkbox is disabled because you cannot grant yourself adminship if you are not Admin!)<br />
	<% end %>

	<% if owner? || admin? %>
		<%= f.label "Password"%>
		<%= f.text_field :password %> <br />
		<%= f.label "Confirm Password"%>
		<%= f.text_field :password_confirmation %> <br />
	<% end %>

	<%= f.submit "Commit Changes"%>

<% end %>


<%= link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete %>


